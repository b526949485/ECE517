<div class="container">

  <p id="notice"><%= notice %></p>

<h1>Editing Review</h1>

<%= form_for ([@tour, @review]) do |f| %>

  <div class="field">
    <p><%= f.label :subject %></p>
    <!--    required true is the html5 client check if field is empty or not-->
    <p><%= f.text_field :subject, required: true%></p>

    <p><%= f.label :message %></p>
    <!--    required true is the html5 client check if field is empty or not-->
    <p><%= f.text_field :message, required: true%></p>

    <p><%= f.hidden_field :user_id, value: current_user.id %></p>
  </div>


  <div class="actions">
    <%= f.submit"edit a review" %>
  </div>

<% end %>


<p><%= link_to 'Back', tour_path(@tour) %></p>
</div>
