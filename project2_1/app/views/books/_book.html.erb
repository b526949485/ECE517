<table class="table">

  <thead>
  <tr>
    <th>Booked seats</th>
    <th>User Info</th>
    <th colspan="2"></th>
  </tr>
  </thead>

  <tbody>

  <% @books.each do |b| %>

    <% if (b.user_id == current_user.id) ||( current_user.role.match(/admin/))%>

      <tr>
        <td><%= b.book_seat %></td>

        <td><%= b.user.name %></td>
        <td><%= link_to "edit", edit_tour_book_path(b.tour_id, b.id) %></td>

        <td><%= link_to 'Destroy', tour_book_path(b.tour_id, b.id), method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>

    <% end %>

  <% end %>
  </tbody>

</table>